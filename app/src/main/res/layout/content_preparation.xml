<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mapp.com.sg.moiepicer.Preparation"
    tools:showIn="@layout/activity_preparation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Ingredient 1-->
        <TextView
            android:id="@+id/tvCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="18dp"
            android:text="Check List"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="22dp"
            android:textColor="#000000"/>

        <View
            android:id="@+id/view1"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginLeft="19dp"
            android:background="#95989A"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="28dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/checklist1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCheck"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_weight="1"
                android:text="Free-range pastured egg" />

            <!--Tips buttons & amount-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnTips"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnshadow"
                    app:srcCompat="@drawable/tips" />

                <ImageButton
                    android:id="@+id/btnStore"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnshadow"
                    app:srcCompat="@drawable/store" />

                <TextView
                    android:id="@+id/tvAmount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="2 piece"
                    android:textColor="#000000"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="19dp"
            android:background="#95989A"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="28dp"
            android:layout_weight="1" />


        <!--Ingredient 2-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/checklist2"
            android:layout_alignRight="@+id/checklist1"
            android:layout_alignEnd="@+id/checklist1">

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/view2"
                android:text="Eggs" />

            <TextView
                android:id="@+id/tvAmount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/view2"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/view2"
                android:text="4 piece"
                android:layout_alignRight="@+id/view2"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="187dp"/>


        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="19dp"
            android:background="#95989A"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="28dp"
            android:layout_weight="1" />


        <!--Ingredient 3-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checklist3"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Spring Onion"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="2"
                android:textColor="#000000"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="15dp"
                android:id="@+id/tvAmount3"/>
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="19dp"
            android:background="#95989A"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="28dp"
            android:layout_weight="1" />

        <!--Ingredient 4-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="White pepper"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="2 pinch"
                android:textColor="#000000"
                android:layout_marginLeft="136dp"
                android:layout_marginTop="15dp"
                android:id="@+id/tvAmount4"/>
        </LinearLayout>



    </LinearLayout>


</ScrollView>
