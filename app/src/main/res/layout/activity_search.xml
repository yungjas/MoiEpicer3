<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mapp.com.sg.moiepicer.Search"
    android:paddingBottom="?android:attr/actionBarSize">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--enter keyword-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText6"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:hint="Enter the keyword"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/btnBlackSearch"
                android:layout_toStartOf="@+id/btnBlackSearch" />

            <ImageButton
                android:id="@+id/btnBlackSearch"
                android:layout_width="23dp"
                android:layout_height="23dp"
                app:srcCompat="@drawable/blacksearch"
                android:background="@android:color/transparent"
                android:layout_marginRight="38dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="38dp" />
        </RelativeLayout>

        <!--Level-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="Level"
                android:textColor="#000000"
                android:textSize="17dp" />

            <Spinner
                android:id="@+id/levelSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="73dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.27" />

            <CheckBox
                android:id="@+id/checkAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:text="All" />
        </LinearLayout>

        <!--Cuisine-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="Cuisine"
                android:textColor="#000000"
                android:textSize="17dp" />

            <Spinner
                android:id="@+id/cuisineSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/checkMyRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:text="My Recipe" />

        </LinearLayout>

        <!--Style-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Style"
                android:textColor="#000000"
                android:textSize="17dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"/>

            <Spinner
                android:id="@+id/styleSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="73dp"/>

            <CheckBox
                android:id="@+id/checkFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Favourite"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="72dp"/>
        </LinearLayout>

        <!--Time-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="Time"
                android:textColor="#000000"
                android:textSize="17dp" />

            <Spinner
                android:id="@+id/timeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="73dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/checkTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:text="Top recipe" />
        </LinearLayout>

        <!--Result-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result"
                android:textSize="21dp"
                android:textColor="#000000"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tvResultNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:text="(1)"
                android:textColor="#000000"
                android:textSize="21dp" />

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="18dp"
            android:background="#95989A"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:visibility="visible" />

        <!--Search results-->
        <TextView
            android:id="@+id/tvResult1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe 1"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="30dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageSearchRecipe"
                android:layout_width="308dp"
                android:layout_height="167dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                app:srcCompat="@android:drawable/btn_star" />

            <!--Time-->
            <ImageView
                android:id="@+id/box1"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/imageSearchRecipe"
                android:layout_alignStart="@+id/imageSearchRecipe"
                android:layout_alignTop="@+id/imageSearchRecipe"
                app:srcCompat="@drawable/rectangle" />

            <ImageView
                android:id="@+id/imageSearchTime"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignBottom="@+id/box1"
                android:layout_alignLeft="@+id/imageSearchRecipe"
                android:layout_alignStart="@+id/imageSearchRecipe"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="9dp"
                app:srcCompat="@drawable/time" />

            <TextView
                android:id="@+id/tvTimeSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageSearchTime"
                android:layout_alignEnd="@+id/box1"
                android:layout_alignRight="@+id/box1"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="6dp"
                android:text="TextView"
                android:textColor="@android:color/white" />

            <!--fav and add button-->
            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/imageSearchRecipe"
                android:layout_alignLeft="@+id/imageSearchRecipe"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/imageSearchRecipe"
                android:layout_alignStart="@+id/imageSearchRecipe"
                app:srcCompat="@drawable/rectangle" />

            <ImageButton
                android:id="@+id/imageSearchHeart"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignLeft="@+id/imageSearchTime"
                android:layout_alignStart="@+id/imageSearchTime"
                android:layout_alignTop="@+id/imageView10"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="140dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/heart" />

            <TextView
                android:id="@+id/tvFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageSearchHeart"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/imageSearchHeart"
                android:layout_toRightOf="@+id/imageSearchHeart"
                android:text="Favourite"
                android:textColor="@android:color/white" />

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="21dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="140dp"
                android:background="@android:color/white" />

            <ImageButton
                android:id="@+id/imageAddCook"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="138dp"
                android:layout_toEndOf="@+id/view"
                android:layout_toRightOf="@+id/view"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/add_to_cook_list" />

            <TextView
                android:id="@+id/tvAddToCookList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageAddCook"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/imageAddCook"
                android:layout_toRightOf="@+id/imageAddCook"
                android:text="Add to cook list"
                android:textColor="@android:color/white" />

            <!--Hand cursor-->
            <ImageView
                android:id="@+id/imageSearchCircle"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageSearchRecipe"
                android:layout_marginRight="25dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/circle" />

            <ImageButton
                android:id="@+id/imageHandCursor"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/imageSearchCircle"
                android:layout_alignLeft="@+id/imageSearchCircle"
                android:layout_alignStart="@+id/imageSearchCircle"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="8dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/handcursor" />


        </RelativeLayout>


    </LinearLayout>
</ScrollView>
