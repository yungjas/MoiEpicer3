<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mapp.com.sg.moiepicer.Settings"
    tools:showIn="@layout/activity_settings">

    <!--Language Setting-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setoption1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textColor="#000000"
            android:textSize="22dp"
            android:layout_margin="18dp"/>

        <TextView
            android:id="@+id/tvLangOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="-15dp"
            android:textColor="#95989A"/>

        <View
            android:id="@+id/view1"
            android:layout_width="384dp"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#95989A"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="28dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!--Alarm Setting-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setoption2"
        android:orientation="vertical"
        android:layout_below="@+id/setoption1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tvAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm"
            android:textColor="#000000"
            android:textSize="22dp"
            android:layout_margin="18dp"/>

        <TextView
            android:id="@+id/tvAlarmOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click for more details"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="-15dp"
            android:textColor="#95989A"/>

        <Switch
            android:id="@+id/switchAlarm"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="Off"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="-25dp"/>

        <View
            android:id="@+id/view2"
            android:layout_width="384dp"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#95989A"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="28dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!--Additional features settings-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setoption3"
        android:orientation="vertical"
        android:layout_below="@+id/setoption2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional features"
            android:textColor="#000000"
            android:textSize="22dp"
            android:layout_margin="18dp"/>

        <TextView
            android:id="@+id/tvAddOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autoplay, voice command, display food warning"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="-15dp"
            android:textColor="#95989A"/>

        <View
            android:id="@+id/view3"
            android:layout_width="384dp"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#95989A"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="28dp"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
