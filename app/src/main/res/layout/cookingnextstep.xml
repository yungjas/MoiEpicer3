<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mapp.com.sg.moiepicer.Cooking"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Step Guide btn-->
        <ImageButton
            android:id="@+id/btnStepGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/stepguidebtn"
            android:background="@android:color/transparent"
            android:layout_marginTop="15dp"/>

        <!--Recipe name-->
        <TextView
            android:id="@+id/tvRecipeTitleCook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe 1"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp"/>

        <View
            android:id="@+id/view1"
            android:layout_width="230dp"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="70dp"
            android:background="#95989A"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:visibility="visible" />

        <!--Step 3-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStep3Cook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Step 3"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tvTotalStepsCook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="of 4"
                android:textSize="20dp"
                android:textColor="#95989A"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="20dp"/>

            <View
                android:id="@+id/view2"
                android:layout_width="130dp"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="10dp"
                android:background="#95989A"
                android:padding="0dp"
                android:paddingTop="0dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvStep1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Steaming"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"/>
        </LinearLayout>

        <!--Timer-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/startbtn"
                android:background="@android:color/transparent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="29.32"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="42dp" />

                <TextView
                    android:id="@+id/tvRemainingTimeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/progressBar"
                    android:layout_alignStart="@+id/progressBar"
                    android:layout_centerVertical="true"
                    android:text="Remaining Time:"
                    android:textColor="#95989A"/>

                <TextView
                    android:id="@+id/tvRemainingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tvRemainingTimeTitle"
                    android:layout_toEndOf="@+id/tvRemainingTimeTitle"
                    android:layout_toRightOf="@+id/tvRemainingTimeTitle"
                    android:text="15m 00s"
                    android:textColor="#95989A"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="3dp"/>

            </RelativeLayout>

        </LinearLayout>

        <!--Description-->
        <TextView
            android:id="@+id/tvCookDescTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/tvCookDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn to low heat, and steam for about 15 min or till set. If you're not sure, shaking the dish a little, it should be jiggly but firm. Uncover halfway first, wait for steam to escape, then fully uncover."
            android:layout_marginLeft="38dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="5dp"/>

        <!--Previous + Next btn-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnCookPrevious2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/previousbtn"
                android:background="@android:color/transparent"
                android:layout_marginTop="120dp"/>

            <ImageButton
                android:id="@+id/btnCookNext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/nextbtn"
                android:background="@android:color/transparent"
                android:layout_marginTop="120dp"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>