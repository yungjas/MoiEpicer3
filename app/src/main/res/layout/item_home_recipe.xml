<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_recipe"
    android:layout_width="wrap_content"
    android:elevation="100dp"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="8dp"
     android:layout_height="wrap_content">

    <!--Recipe 1-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <TextView
        android:id="@+id/tvRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_delete_recipe"
        android:layout_toStartOf="@+id/btn_delete_recipe"
        android:text="@string/recipe_1"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_delete_recipe"
        android:layout_width="119dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/tvRecipeName"
        android:layout_alignBottom="@+id/tvRecipeName"
        android:layout_alignEnd="@+id/imageView_recipe"
        android:layout_alignRight="@+id/imageView_recipe"
        android:text="Button"
        tools:drawableLeft="@drawable/delete"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-7dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRecipeName"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/imageView_recipe"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/btn_delete_recipe"
        android:layout_centerHorizontal="true"
        android:background="#525252"
        app:srcCompat="@android:drawable/btn_star_big_off"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_delete_recipe"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
