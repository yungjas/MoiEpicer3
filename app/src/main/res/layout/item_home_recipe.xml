<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_recipe"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:elevation="100dp"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="8dp"
     android:layout_height="wrap_content">


        <!--Recipe 1-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <TextView
        android:id="@+id/tvRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_delete_recipe"
        android:layout_toStartOf="@+id/btn_delete_recipe"
        android:text="@string/recipe_1"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_delete_recipe"
        android:layout_width="119dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/tvRecipeName"
        android:layout_alignBottom="@+id/tvRecipeName"
        android:layout_alignEnd="@+id/imageView_recipe"
        android:layout_alignRight="@+id/imageView_recipe"
        android:text="Button"
        tools:drawableLeft="@drawable/delete"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-7dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRecipeName"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/imageView_recipe"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/btn_delete_recipe"
        android:layout_centerHorizontal="true"
        android:background="#525252"
        app:srcCompat="@android:drawable/btn_star_big_off"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_delete_recipe"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="299dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageView_recipe"
        android:layout_alignEnd="@+id/imageView_recipe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView_recipe"
        app:srcCompat="@drawable/rectangle"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView_recipe"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_recipe"
        android:layout_marginBottom="0dp"
        tools:layout_editor_absoluteY="191dp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/imageView_recipe"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintLeft_toLeftOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/add_to_cook_list" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnSumHeart"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/btnSumHeart"
        android:layout_toRightOf="@+id/btnSumHeart"
        android:text="@string/btnAddtoCook"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintLeft_toRightOf="@+id/imageButton6"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        app:layout_constraintVertical_bias="0.529" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
